title: Categorias
layout: layoutEs.njk
---

<section class="dark:text-white">
    <h2 class=" font-bold text-3xl mt-6 xl:mt-20">Asignaturas</h2>

    <div class="grid text-left mt-8 mb-28 gap-8 md:grid-cols-3 md:gap-6 md:mt-16 xl:justify-between xl:grid-cols-3 xl:gap-48 xl:mt-24">
        {% for post in collections.asignatura %}
         <a href="/es/categorias/{{post.data.categorie}}" class="w-full rounded-2xl min-h-60 flex items-center flex-col text-center justify-between px-7 md:px-3 xl:hidden hover:-translate-y-1 transition-all duration-200 hover:shadow-md" style="background-color: #{{post.data.color}};">
            <img src={{post.data.featuredImage}} alt="categorie image" class="w-32">
            <h2 class="font-bold text-white text-3xl -mt-5"> {{ post.data.title }}</h2>
            <p class="text-white mt-4 mb-7 text-lg leading-tight">{{post.data.description}}</p>
         </a>


        <div class="hidden xl:flex m-0 relative flex-col text-center group">
            <div class="absolute inset-0 -z-10 rounded-2xl scale-50 transition-all duration-300 group-hover:scale-x-125 group-hover:scale-y-110 shadow-3xl dark:bg-[#242829]"></div> 
            <a href="/es/categorias/{{post.data.categorie}}" class="rounded-2xl transition-all duration-300 flex justify-center group-hover:-translate-y-32 group-hover:scale-75 shadow-3xl" style="background-color: #{{post.data.color}};"><img class="my-7" src={{post.data.featuredImage}}></a>
                <h3 class="font-bold text-3xl my-3 text-left group-hover:text-center group-hover:-translate-y-40 transition-all duration-300">{{post.data.title}}</h3>
                <div class="flex justify-between items-center transition-all duration-300">
                    <div class="flex items-center">
                        <a href="/"><img class="w-8 h-8 object-cover rounded-full border-2 border-orange-400" src="/assets/images/gato1.jpg"></a>
                        <a href="/" class="my-0 ml-2 transition-all font-medium text-sm underline underline-offset-0 decoration-0 decoration-transparent hover:text-orange-400 hover:underline-offset-2 hover:decoration-orange-400 hover:decoration-2 duration-200">Jorge Ant√≥n</a>
                    </div>
                </div>
            <div class="absolute hidden bottom-0 right-0 left-0 group-hover:block transition-all duration-300 group-hover:-translate-y-20">
                <div class="flex justify-center items-center">
                    <a href="/es/categorias/{{post.data.categorie}}" class="border-2 border-orange-400 py-2 px-8 rounded-full font-bold text-2xl hover:bg-orange-400 hover:text-white fill-black hover:fill-white group transition-all flex items-center gap-2 group dark:fill-white">
                        <p class="transition-all">Ver Todo</p>
                        <svg class="fill-inherit transition-all" width="18" height="16" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M17.707 8.707a1 1 0 0 0 0-1.414L11.343.929A1 1 0 1 0 9.93 2.343L15.586 8l-5.657 5.657a1 1 0 0 0 1.414 1.414l6.364-6.364ZM0 9h17V7H0v2Z"/></svg>
                    </a>
                </div>
            </div>
            <div class="absolute -translate-y-16 hidden bottom-0 right-0 left-0 group-hover:block transition-all duration-300 group-hover:-translate-y-36 text-lg text-gray-700 dark:text-gray-400">{{post.data.description}}</div>

        </div>
        {% endfor %}
        
     </div>
</section>